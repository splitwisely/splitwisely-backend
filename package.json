{
  "name": "template-express-node-ts",
  "version": "1.0.0",
  "description": "Template with express, nodejs and typescript",
  "main": "index.js",
  "engines": {
    "node": "18.12.1"
  },
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev": "ts-node-dev src/server.ts",
    "build": "tsc",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --verbose"
  },
  "author": "Juan Jose Vega",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.2",
    "http-status": "1.5.3",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.3",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "dotenv": "16.0.3",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.3.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format",
      "npm run lint:fix"
    ]
  }
}
